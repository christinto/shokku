{
  "name": "shokku",
  "description": "Shokku - An open source scalable blockchain infrastructure for Ubiq, Ethereum and IPFS",
  "version": "0.1.0",
  "author": "@aldoborrero",
  "license": "Apache License 2.0",
  "private": true,
  "scripts": {
    "start:prod": "node dist/main.js",
    "start:dev": "nodemon",
    "build:clean": "rm -rf dist",
    "build:prod": "tsc",
    "test:run": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "tslint --config tslint.json --project .",
    "shokku-cli": "ts-node ./bin/shokku-cli.ts"
  },
  "dependencies": {
    "@nest-middlewares/morgan": "^1.1.1",
    "@nestjs/common": "^4.5.9",
    "@nestjs/core": "^4.5.10",
    "@nestjs/graphql": "^2.0.0",
    "@nestjs/microservices": "^4.5.8",
    "@nestjs/swagger": "^1.2.2",
    "@nestjs/testing": "^4.5.5",
    "@nestjs/websockets": "^4.5.8",
    "@types/chai": "^4.1.2",
    "@types/joi": "^13.0.7",
    "@types/lodash": "^4.14.106",
    "apollo-server-express": "^1.3.4",
    "axios": "^0.18.0",
    "bignumber.js": "^6.0.0",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "graphql": "^0.13.2",
    "graphql-tools": "^2.24.0",
    "joi": "^13.1.2",
    "lodash": "^4.17.5",
    "nest-router": "^1.0.5",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6",
    "swagger-ui-express": "^3.0.6",
    "typescript": "^2.8.1",
    "web3": "^1.0.0-beta.34",
    "web3-core-helpers": "^1.0.0-beta.34",
    "web3-core-method": "^1.0.0-beta.34",
    "web3-utils": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/express": "^4.0.39",
    "@types/handlebars": "^4.0.37",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/ora": "^1.3.4",
    "@types/shelljs": "^0.7.8",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "commander": "^2.15.1",
    "dotenv": "^5.0.1",
    "ganache-core": "^2.1.0",
    "jest": "^21.2.1",
    "moxios": "^0.4.0",
    "nodemon": "^1.14.1",
    "ora": "^2.0.0",
    "prettier": "^1.11.1",
    "shelljs": "^0.8.1",
    "solc": "^0.4.21",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.2.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2"
  },
  "jest": {
    "rootDir": ".",
    "moduleNameMapper": {
      "^@/(.*)": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
