{
  "name": "shokku",
  "description": "Shokku - An open source scalable blockchain infrastructure for Ubiq, Ethereum and IPFS",
  "version": "0.1.0",
  "author": "@aldoborrero",
  "license": "Apache License 2.0",
  "private": true,
  "main": "./build/bundle.js",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:prod": "node dist/bundle.js",
    "start:dev": "nodemon",
    "build:clean": "rm -rf dist",
    "build:prod": "webpack --env.prod -p",
    "test:run": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "format": "prettier --write \"**/*.ts\"",
    "lint:run": "tslint --project . --config tslint.json",
    "shokku-cli": "node ./bin/shokku-cli.js"
  },
  "dependencies": {
    "@nestjs/common": "^4.5.9",
    "@nestjs/core": "^4.5.10",
    "@nestjs/microservices": "^4.5.8",
    "@nestjs/testing": "^4.5.5",
    "@nestjs/websockets": "^4.5.8",
    "axios": "^0.18.0",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "joi": "^13.1.2",
    "lodash": "^4.17.5",
    "nest-router": "^1.0.5",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6",
    "typescript": "^2.8.1",
    "web3": "^1.0.0-beta.33",
    "web3-core-helpers": "^1.0.0-beta.33",
    "web3-core-method": "^1.0.0-beta.33"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "commander": "^2.15.1",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "nodemon-webpack-plugin": "^0.1.6",
    "ora": "^2.0.0",
    "prettier": "^1.11.1",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.2.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "web3-utils": "^1.0.0-beta.33",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
